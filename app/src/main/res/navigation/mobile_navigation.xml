<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.superbazar.ui.Home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action android:id="@+id/nav_home_to_wishlist"
            app:destination="@+id/navigation_wishlist"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_home_to_cart"
            app:destination="@+id/navigation_cart"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_home_to_product_list"
            app:destination="@+id/navigation_productList"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_home_to_product_details"
            app:destination="@+id/navigation_product_details"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_productList"
        android:name="com.superbazar.ui.ProductList.ProductListFragment"
        android:label="Product List"
        tools:layout="@layout/fragment_product_list">

        <action android:id="@+id/nav_productList_to_wishlist"
            app:destination="@+id/navigation_wishlist"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_productList_to_cart"
            app:destination="@+id/navigation_cart"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_prodList_to_product_details"
            app:destination="@+id/navigation_product_details"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.superbazar.ui.Category.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category"></fragment>

    <fragment
        android:id="@+id/navigation_product_details"
        android:name="com.superbazar.ui.ProductDetails.ProductDetailsFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_product_details">

        <action android:id="@+id/nav_product_details_to_wishlist"
            app:destination="@+id/navigation_wishlist"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_product_details_to_cart"
            app:destination="@+id/navigation_cart"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_home_to_product_details"
            app:destination="@+id/navigation_product_details"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

        <action android:id="@+id/nav_product_details_to_view_image"
            app:destination="@+id/navigation_image_view"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_image_view"
        android:name="com.superbazar.ui.ProductDetails.ViewImageActivity"
        android:label="Image View"
        tools:layout="@layout/activity_view_image">

        <action android:id="@+id/nav_to_view_image_product_details"
            app:destination="@+id/navigation_product_details"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.superbazar.ui.Cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">

        <action android:id="@+id/nav_cart_to_wishlist"
            app:destination="@+id/navigation_wishlist"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.superbazar.ui.Wishlist.WishlistFragment"
        android:label="Wishlist"
        tools:layout="@layout/fragment_wishlist">

        <action android:id="@+id/nav_wishlist_to_cart"
            app:destination="@+id/navigation_cart"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>


</navigation>
