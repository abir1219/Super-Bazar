<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.superbazar.ui.Home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action android:id="@+id/nav_home_to_product_list"
            app:destination="@+id/navigation_productList"
            app:popEnterAnim="@anim/fade_in_animation"
            app:enterAnim="@anim/fade_in_animation"
            app:popExitAnim="@anim/fade_out_animation"
            app:exitAnim="@anim/fade_out_animation"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_productList"
        android:name="com.superbazar.ui.ProductList.ProductListFragment"
        android:label="Product List"
        tools:layout="@layout/fragment_home"></fragment>


</navigation>