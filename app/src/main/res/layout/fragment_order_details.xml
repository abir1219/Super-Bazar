<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.OrderDetails.OrderDetailsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/baseColor">

            <LinearLayout
                android:id="@+id/llMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/white" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/llTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llWisth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/llCart"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <FrameLayout
                        android:id="@+id/flWishlist"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clipToPadding="false"
                        android:focusable="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/love"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvwish_badge"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="-10dp"
                            android:background="@drawable/bottom_nav_background"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="0" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp">


                    <FrameLayout
                        android:id="@+id/flCart"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clipToPadding="false"
                        android:focusable="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bag"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvcart_badge"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="-10dp"
                            android:background="@drawable/bottom_nav_background"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="0" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/llWisth"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_search_24"
                        app:tint="@color/white" />

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="55dp"
                >
                <androidx.cardview.widget.CardView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">
                            <TextView
                                android:id="@+id/tvId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:text="Order No 000"/>

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvId"
                                android:textColor="@color/black3"
                                android:textSize="13sp"
                                tools:text="00/00/0000 00/00" />

                            <!--<TextView
                                android:id="@+id/tvPrice"
                                android:layout_alignParentRight="true"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                tools:text="Rs. 00"/>-->

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray1"
                            android:layout_marginTop="10dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="0dp"
                                android:text="Total Product"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvTotalItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                tools:text="00"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Total Price"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:text="00.00"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/tvPrice"
                                android:text="Rs."
                                android:textColor="@color/black"
                                android:textSize="15sp" />-->

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Tax"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Discount"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Amount Payable"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvAmountPayable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                >
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    />
                                <View
                                    android:id="@+id/vViewOnprocess"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    />
                                <View
                                    android:id="@+id/vViewDispatchImages"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    />
                                <View
                                    android:id="@+id/vViewDeliverd"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:gravity="center"
                                    >
                                    <ImageView
                                        android:id="@+id/ivO_P"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:id="@+id/vO_P"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"/>
                                    <ImageView
                                        android:id="@+id/ivO_OP"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:id="@+id/vO_OP"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"/>
                                    <!--<ImageView
                                        android:id="@+id/ivO_A"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:id="@+id/vO_A"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"/>-->
                                    <ImageView
                                        android:visibility="visible"
                                        android:id="@+id/ivO_D"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:id="@+id/vO_D"
                                        android:visibility="visible"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"/>
                                    <ImageView
                                        android:id="@+id/ivO_O"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginBottom="10dp">
                                    <TextView
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Placed"
                                        android:textSize="11sp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="On Process"
                                        android:textSize="11sp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Dispatch"
                                        android:textSize="11sp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:visibility="gone"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Asign Delivery Person"
                                        android:textSize="11sp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Delivered"
                                        android:textSize="11sp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>
                        </FrameLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:background="@color/black7"

                            />
                        <TextView
                            android:id="@+id/tvCancelOrder"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Cancel Order"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:textColor="@color/black4"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                <!--<LinearLayout
                    android:id="@+id/llAddtoCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:text="Cancel Order"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_baseline_cancel_24"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/white"
                        />
                </LinearLayout>-->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>